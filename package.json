{
  "name": "uno-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/server/index.ts",
    "start": "node dist/server/index.js",
    "build": "tsc && webpack --config webpack.config.ts && cp -R src/server/views dist/server/views && cp -R src/public dist/public && cp dist/server/index.js api/index.js",
    "build:dev": "webpack --config webpack.config.ts --mode development --watch",
    "start:dev": "concurrently --names server,frontend -c blue,green \"npm run server:dev\" \"npm run build:dev\"",
    "server:dev": "nodemon --exec ts-node src/server/index.ts --ext ts,js,css,ejs --ignore src/public/js",
    "prepare": "husky install",
    "db:create": "node-pg-migrate create -j ts --",
    "db:migrate": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate.js up -j ts",
    "db:rollback": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate.js down -j ts",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/css": "^0.7.0",
    "@eslint/js": "^9.26.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-livereload": "^0.6.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/express-flash": "^0.0.5",
    "@types/express-session": "^1.18.0",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.8",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.11.10",
    "@types/toastify-js": "^1.12.4",
    "@types/webpack": "^5.28.5",
    "concurrently": "^9.1.0",
    "connect-livereload": "^0.6.1",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.7",
    "prettier": "^3.5.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.32.1",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bad-words": "^4.0.0",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-flash": "^0.0.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "http-errors": "^2.0.0",
    "leo-profanity": "^1.7.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.13.1",
    "pg-promise": "^11.10.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "toastify-js": "^1.12.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
