<aside id="chat-section" class="w-full max-w-md mx-auto border border-gray-300 rounded p-4 bg-white text-left flex flex-col min-h-[500px]">

    <h2 class="text-2xl font-bold text-center mb-4">Chat</h2>

    <template id="chat-message-template">
        <li class="chat-message flex flex-col bg-white border border-gray-200 rounded-lg px-4 py-2 shadow-sm">
            <span class="content text-gray-800"></span>
        </li>
    </template>

    <div class="h-96 overflow-y-auto mb-4 border border-gray-200 rounded-lg bg-gray-50 p-3">
        <ul id="messages" class="space-y-3">
        </ul>
    </div>

    <form action="/chat/<%= roomId %>" method="post" class="mt-auto flex items-center space-x-2">
        <input
                id="chat-message"
                autocomplete="off"
                class="flex-1 border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="Type a message..."
        />
        <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
            Send
        </button>
    </form>

</aside>