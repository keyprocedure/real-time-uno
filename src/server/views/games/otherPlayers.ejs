<p id="current-player" class="text-2xl font-bold mb-4">
    <%= currentPlayerId === gameState.currentPlayerId
            ? "It's your turn!"
            : `It's ${gameState.currentPlayerUsername}'s turn!` %>
</p>

<div class="grid gap-3 justify-items-center px-4 mx-auto w-full"
     style="grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));">
<% gameState.players.forEach(player => { %>
        <div class="rounded-lg p-4 w-40 shadow hover:shadow-md transition bg-gray-50 border border-gray-200 text-center">
            <div class="flex items-center justify-center mb-2">
                <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center text-gray-700 font-bold">
                    <%= player.username.charAt(0).toUpperCase() %>
                </div>
            </div>
            <h3 class="text-sm font-medium text-gray-900"><%= player.username %></h3>
            <p class="text-xs text-gray-500">
                <span id="player-hand-<%= player.id %>"><%= player.hand.length %></span> cards
            </p>
        </div>
    <% }) %>
</div>
