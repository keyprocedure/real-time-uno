<div style="margin: 24px 0;">
    <h2 class="font-bold">Top Card</h2>
    <% if (gameState.discardPile.length > 0) { %>
        <% const topCard = gameState.discardPile[gameState.discardPile.length - 1]; %>
        <div id="top-card" class="card <%= topCard.color %> mb-4">
            <% let valueText;
                if (topCard.value === "wild_draw4") {
                    valueText = "Wild Draw 4";
                } else if (topCard.value === "wild") {
                    valueText = "Wild";
                } else if (topCard.value === "draw2") {
                    valueText = "Draw 2";
                } else {
                    valueText = topCard.value;
                }
            %>
            <%= topCard.color %><br><%= valueText %>
        </div>
    <% } else { %>
        <div id="top-card" class="card mb-4">No Cards</div>
    <% } %>
    <br/>
    <button id="draw-card-btn" class="draw-button">Draw Card</button>
</div>