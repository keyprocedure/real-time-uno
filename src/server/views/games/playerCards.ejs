<h2 class="mt-16 text-xl font-semibold text-gray-800 mb-4">Your Cards</h2>
<div id="player-cards" class="card-grid">
    <% const currentPlayer = gameState.players.find(player => player.id === currentPlayerId); %>
    <% if (currentPlayer) { %>
        <% currentPlayer.hand.forEach(card => { %>
            <%
                let displayText;
                if (card.value === 'wild_draw4') {
                    displayText = 'Wild Draw 4';
                } else if (card.value === 'wild') {
                    displayText = 'Wild';
                } else if (card.value === 'draw2') {
                    displayText = `${card.color} Draw 2`;
                } else {
                    displayText = `${card.color} ${card.value}`;
                }

                const colorClass = card.color || 'wild';
            %>
            <div class="card <%= colorClass %>" data-color="<%= colorClass %>" data-value="<%= card.value %>">
                <%= displayText %>
            </div>
        <% }) %>
    <% } else { %>
        <p>No cards available</p>
    <% } %>
</div>
